<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <title>ğŸ“‹ User Tasks Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { darkMode: 'class' }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollToPlugin.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

<body
    class="bg-gradient-to-br from-[#f2f6fa] to-[#e4eaf2] dark:from-gray-900 dark:to-gray-800 transition duration-300 ease-in-out">

    <div class="max-w-5xl mx-auto py-12 px-6">
        <div class="flex justify-between items-center mb-12">
            <div>
                <h1 class="text-5xl font-bold text-gray-800 dark:text-white mb-2">ğŸ“‹ Tasks Board</h1>
                <p class="text-gray-500 dark:text-gray-300">Manage your user tasks beautifully & efficiently.</p>
            </div>
            <button id="themeToggle"
                class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white px-4 py-2 rounded-lg shadow hover:opacity-90 transition">
                ğŸŒ— Theme
            </button>
        </div>

        <!-- Add Task & Search -->
        <div class="flex flex-wrap justify-between items-center mb-8 gap-4">
            <a href="/new"
                class="px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-full shadow hover:scale-105 transition text-lg">â•
                Add Task</a>

            <input id="searchInput" type="text" placeholder="ğŸ” Search by username..."
                class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition w-full sm:w-64 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
        </div>

        <% if (users.length===0) { %>
            <div class="text-center bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-8">
                <p class="text-gray-600 dark:text-gray-300 text-xl">No users in your database.</p>
            </div>
            <% } else { %>
                <div class="space-y-8" id="userContainer">
                    <% users.forEach(user=> { %>
                        <div
                            class="user-card bg-white/90 dark:bg-gray-800/90 backdrop-blur shadow-2xl rounded-xl p-6 border-l-8 border-blue-500 opacity-0 translate-y-10 transition-all">
                            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-3">ğŸ‘¤ <%= user.username %>
                            </h2>
                            <p class="text-gray-600 dark:text-gray-300 mb-1">ğŸ“§ <strong>Email:</strong>
                                <%= user.email %>
                            </p>
                            <p class="text-gray-600 dark:text-gray-300 mb-1">ğŸ“ <strong>Task:</strong>
                                <%= user.task %>
                            </p>
                            <p class="text-gray-400 text-sm mb-4">ğŸ“… Created: <%= user.createdAt.toLocaleString() %>
                            </p>
                            <div class="flex flex-wrap gap-3 mt-4">
                                <form action="/edit/<%= user._id %>" method="get">
                                    <button
                                        class="px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white rounded-lg shadow hover:scale-105 transition">âœï¸
                                        Edit</button>
                                </form>
                                <form action="/delete/<%= user._id %>?_method=DELETE" method="POST">
                                    <button type="submit"
                                        class="px-4 py-2 bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-lg shadow hover:scale-105 transition">ğŸ—‘ï¸
                                        Delete</button>
                                </form>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </div>

    <script>
        // GSAP animation for cards
        gsap.utils.toArray(".user-card").forEach((card, i) => {
            gsap.to(card, {
                opacity: 1,
                y: 0,
                delay: i * 0.1,
                duration: 0.7,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: card,
                    start: "top 90%"
                }
            });
        });

        // Dark mode toggle
        const toggle = document.getElementById("themeToggle");
        const root = document.documentElement;
        if (localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
            root.classList.add("dark");
        } else {
            root.classList.remove("dark");
        }

        toggle.addEventListener("click", () => {
            root.classList.toggle("dark");
            localStorage.theme = root.classList.contains("dark") ? "dark" : "light";
        });

        // Search functionality
        const searchInput = document.getElementById("searchInput");
        const userCards = document.querySelectorAll(".user-card");

        searchInput.addEventListener("input", (e) => {
            const searchTerm = e.target.value.toLowerCase();
            let matchFound = false;

            userCards.forEach(card => {
                const username = card.querySelector("h2").textContent.toLowerCase();
                if (username.includes(searchTerm)) {
                    card.style.display = "block";
                    matchFound = true;
                } else {
                    card.style.display = "none";
                }
            });
        });
    </script>

</body>

</html>